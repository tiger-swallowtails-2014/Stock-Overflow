<% @current_answer.responses.each do |response| %>
    <p><%= response.content %> | <em><%= User.find(response.user_id).username %> <%= response.created_at %></em></p>
<% end %>

<% if session[:user_id] %>
  <p class="create-answer-comment">create comment</p>
  <form class="answer-comment-form" action="/users/<%=@user.id%>/questions/<%=@question.id%>/answers/<%=@current_answer.id%>/responses" method="post">
    <input class="input-content" type="text" name="content" placeholder="comment here" >
    <input class="answer-comment-submit" type="submit">
  </form>
<% end %>
