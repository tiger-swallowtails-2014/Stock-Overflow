<% if session[:user_id] %>

  <div class="entry_button">
    <ul>
      <li><%= button_to "Sign Out", sessions_path, :method => :delete %></li>
    </ul>
  </div>

  <h1>Welcome  <%= @user.username %> </h1>

  <button class="recent_button">Most Recent</button>
  <button class="vote_button">Highest Voted</button>
  <button class="trending_button">Trending</button>

  <div class="recent">
    <h1>Most Recent Questions</h1>
    <%  @most_recent_questions.reverse_each do |question| %>
      <div class="question">
        <ul>
          <li> <div class="numvotes"><%=question.votes.count %> Votes </div> </li>
          <li> <div class="numresponses"><%=question.responses.count %> Responses </div> </li>
          <li> <div class="title"><%= question.title %></p> </div> </li>
        <ul>
      </div>
    <% end %>
  </div>

  <div class="vote">
    <h1>Highest Voted Questions</h1>
      <% @highest_voted_questions.each do |question| %>
       <div class="question">
        <ul>
          <li> <div class="numvotes"><%=question.votes.count %> Votes </div> </li>
          <li> <div class="numresponses"><%=question.responses.count %> Responses </div> </li>
          <li> <div class="title"><%= question.title %></p> </div> </li>
        <ul>
      </div>
    <% end %>
  </div>

  <div class="trending">
    <h1>Trending Questions</h1>
      <% @trending_questions.each do |question| %>
       <div class="question">
        <ul>
          <li> <div class="numvotes"><%=question.votes.count %> Votes </div> </li>
          <li> <div class="numresponses"><%=question.responses.count %> Responses </div> </li>
          <li> <div class="title"><%= question.title %></p> </div> </li>
        <ul>
      </div>
    <% end %>
  </div>

<% else %>


  <div class="entry_button">
    <ul>
      <li><h1>STOCK OVERFLOW</h1></li>
      <li><%=button_to "Sign Up", new_user_path %></li>
